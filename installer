#--------------------------------------------------#
#Directorio de Respaldos
#--------------------------------------------------#
sudo mkdir /root/backup
#--------------------------------------------------#
#Respaldo de tus repositorios
#--------------------------------------------------#
sudo cp /etc/apt/sources.list /etc/apt/sources.list.backup
#--------------------------------------------------#
#Agregando Repositorios Universe y Multiverse https://help.ubuntu.com/community/Repositories/CommandLine#Adding%20the%20Universe%20and%20Multiverse%20Repositories
#--------------------------------------------------#
sudo add-apt-repository "deb http://us.archive.ubuntu.com/ubuntu/ $distro universe multiverse"
sudo add-apt-repository "deb http://us.archive.ubuntu.com/ubuntu/ $distro-updates universe multiverse"
#--------------------------------------------------#
#Agregar repositorios de Partner
#--------------------------------------------------#
#deb http://archive.canonical.com/ubuntu saucy partner
#deb-src http://archive.canonical.com/ubuntu saucy partner
#--------------------------------------------------#
#Actualizando repositorios
#--------------------------------------------------#
sudo apt-get update
#--------------------------------------------------#
#Respaldo de tus Bash RC
#--------------------------------------------------#
sudo cp ~/.bashrc /root/backup/
#--------------------------------------------------#
#Actualizar su servidor de Ubuntu 12.04.X
#--------------------------------------------------#
sudo apt-get update
#--------------------------------------------------#
#Mejorar su servidor de Ubuntu 12.04.X
#--------------------------------------------------#
sudo apt-get upgrade
#--------------------------------------------------#
#Definir Locales español
#--------------------------------------------------#
export LANGUAGE=es_ES.UTF-8 UTF-8
export LANG=es_ES.UTF-8 UTF-8
export LC_ALL=es_ES.UTF-8 UTF-8
locale-gen es_ES.UTF-8
#--------------------------------------------------#
#Despues
#nano .bashrc
#
#al final del codigo
#
#export LANGUAGE=en_US.UTF-8
#export LANG=en_US.UTF-8
#export LC_ALL=en_US.UTF-8
#Parar poner en ingles
#export LANGUAGE=en_US.UTF-8
#export LANG=en_US.UTF-8
#export LC_ALL=en_US.UTF-8
#locale-gen en_US.UTF-8
#--------------------------------------------------#
apt-get install locales
dpkg-reconfigure locales
#--------------------------------------------------#
#Instalar lo basico en el servidor
#--------------------------------------------------#
sudo apt-get install build-essential
#--------------------------------------------------#
#Instalar GIT
#--------------------------------------------------#
sudo apt-get -y install git


#____________________________ en construcción
#Install Puppet http://docs.puppetlabs.com/guides/installation.html#debian-and-ubuntu
wget https://apt.puppetlabs.com/puppetlabs-release-precise.deb
sudo dpkg -i puppetlabs-release-precise.deb
sudo apt-get update

#Instalar Node.js http://nodejs.org/download/
sudo apt-add-repository ppa:chris-lea/node.js
sudo apt-get update
sudo apt-get -y install nodejs

#--------------------------------------------------#
#Acceder a OpenStack Havana http://www.ubuntu.com/download/cloud/cloud-archive-instructions
#--------------------------------------------------#
sudo add-apt-repository cloud-archive:havana

#--------------------------------------------------#
#Instalar EC2 API tools https://help.ubuntu.com/community/EC2StartersGuide
#--------------------------------------------------#
sudo apt-add-repository ppa:awstools-dev/awstools
sudo apt-get update
sudo apt-get install ec2-api-tools
